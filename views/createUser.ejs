
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" src="../public/stylesheets/style.css" />
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-700 px-12 pt-12">
      <div class="flex justify-between">
        <h1 class="text-2xl text-white font-semibold">Create User</h1>
        <a class="text-blue-400 font-semibold cursor-pointer" href="/users">
          See all users
        </a>
      </div>
      <form action="create" method="post" class="flex gap-4 mt-8">
        <input class="rounded-lg px-4" placeholder="name" name="name" />
        <input class="rounded-lg px-4" placeholder="email" name="email" />
        <input class="rounded-lg px-4" placeholder="image url" name="image" />
        <input
          class="rounded-lg bg-blue-800 py-2 px-4 text-white"
          type="submit"
        />
      </form>
      <div class="flex gap-3 flex-wrap users mt-12">
        <% users.forEach(function (user) {%>
        <div
          class="flex flex-col items-center justify-center h-fit w-40 bg-gray-400 rounded-lg flex-wrap"
        >
          <div class="w-36 h-40 rounded-lg mt-2">
            <img
              class="h-full w-full object-cover rounded-lg"
              src="<%= user.image%>"
            />
          </div>
          <div class="text-left"><%= user.name %></div>
          <div
            class="text-zinc-600 truncate text-sm px-2 tracking-tight w-full"
          >
            <%= user.email%>
          </div>
          <div class="flex gap-16 my-2 items-center">
            <a href="/edit/<%= user.id%>">Edit</a>
            <a href="/delete/<%=user.id%>"> <div>Delete</div></a>
          </div>
        </div>
        <% })%>
      </div>





    </div>

  </body>
  <script src="https://cdn.tailwindcss.com"></script>
</html>
